---
to: src/components/<%= name %>/component.tsx
---
<% const comp = name -%>
<% if(componentType === 'Class') { -%>
import React, { Component } from 'react';
import { View, ViewStyle } from 'react-native';
import styled from '@emotion/native';
import { colors } from '../../styles';

interface Props {
  cool: boolean;
  style: ViewStyle;
}

interface State {
  myStateValue?: boolean;
}

const INITIAL_STATE: State = {
  myStateValue: true,
};

const Container = styled(View)`
  flex: 1;
`

export class <%= comp %> extends Component<Props, State> {
  public static readonly defaultProps: Props = { cool: true };
  public state = INITIAL_STATE;

  public render() {
    return (
      <View style={styles.container}>
        {this.props.children}
      </View>
    );
  }
}
<% } else { %>
import React, { SFC } from "react";
import { View, ViewStyle } from 'react-native';
import styles from "./styles";

interface Props {
  cool: boolean;
  style: ViewStyle;
}

export const <%= comp %>: SFC<Props> = ({ cool = true, children }) => (
  <View {...props}>
    {children}
  </View>
);
<% } -%>

export default <%= comp %>;
